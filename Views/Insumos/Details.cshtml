@model SanRafael.Models.InsumoModels.Insumo

@{
    ViewData["Title"] = "Detalles";
}



<section class="container">
    <h2>Detalles de Insumo</h2>
    <hr />
    <div class="row">
        @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
        {
        <div id="alert_Details_Insumo" class="col-12 alert alert-success" role="alert">
            @ViewBag.Mensaje
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        }
        <div class="col-md-6 offset-md-4">
            <h4>Insumo</h4>
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Tienda)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Tienda)</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Deshabilitado == false)
                    {
                        <span>Habilitado</span>
                    }
                    else
                    {
                        <span>Deshabilitado</span>
                    }
                </dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Categoria)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Categoria.Nombre)</dd>
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Unidad)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Unidad.Nombre)</dd>



                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Precio)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.StockMinimo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.StockMinimo)</dd>
                

                <dt class="col-sm-3"></dt>
                <dd class="col-sm-9"></dd>
                <dt class="col-sm-3 pt-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block btn-sm btn-secondary">Editar</a>
                </dt>
                <dd class="col-sm-3 pt-2">
                    <form asp-action="Deshabilitar" method="post">
                        <input type="hidden" asp-for="Id" />
                        @if (Model.Deshabilitado == false)
                        {
                            <input type="hidden" name="estado" value="true" />
                            <input type="submit" class="btn btn-block btn-sm btn-primary" value="Deshabilitar" />
                        }
                        else
                        {
                            <input type="hidden" name="estado" value="false" />
                            <input type="submit" class="btn btn-block btn-sm btn-primary" value="Habilitar" />
                        }
                    </form>
                </dd>
            </dl>
        </div>
    </div>
    <div>
        <a asp-action="Index">Regresar al Listado</a>
    </div>
</section>

