@model SanRafael.Models.Costo

@{
    ViewData["Title"] = "Detalles";
}
<section class="container">
    <h2>Detalles</h2>
    <hr />
    <div class="row">
        @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
        {
            <div id="alert_Details_Costo" class="col-12 alert alert-success" role="alert">
                @ViewBag.Mensaje
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-md-6 offset-md-4">
            <h4>Costo</h4>
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                @if (Model.Tipo.Equals("Fijo"))
                {
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Periodicidad)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Periodicidad)
                    </dd>
                }
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Tipo)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Tipo)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Monto)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Monto)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaRegistro)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaRegistro)
                </dd>
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @if (Model.Deshabilitado == false)
                    {
                        <span>Habilitado</span>
                    }
                    else
                    {
                        <span>Deshabilitado</span>
                    }
                </dd>
                <dt class="col-sm-3 pt-2">
                    @if (Model.Tipo.Equals("Fijo"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block btn-sm btn-secondary">Editar</a>
                    }
                    else if (Model.Tipo.Equals("Otro"))
                    {
                        <a asp-action="EditOtro" asp-route-id="@Model.Id" class="btn btn-block btn-sm btn-secondary">Editar</a>
                    }
                </dt>
                <dd class="col-sm-3 pt-2">
                    <form asp-action="Deshabilitar" method="post">
                        <input type="hidden" asp-for="Id" />
                        @if (Model.Deshabilitado == false)
                        {
                            <input type="hidden" name="estado" value="true" />
                            <input type="submit" class="btn btn-block btn-sm btn-primary" value="Deshabilitar" />
                        }
                        else
                        {
                            <input type="hidden" name="estado" value="false" />
                            <input type="submit" class="btn btn-block btn-sm btn-primary" value="Habilitar" />
                        }
                    </form>
                </dd>
            </dl>
        </div>
    </div>
        <div>            
            <a asp-action="Index">Regresar al listado</a>
        </div>
</section>