@model SanRafael.Models.Presentacion

@{
    ViewData["Title"] = "Delete";
}

<section class="container">
    <h3>¿Estás seguro que deseas eliminar esta presentación?</h3>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <h4>Presentación</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.nombre)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.cantidadUnidades)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.cantidadUnidades)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.precioPresentacion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.precioPresentacion)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.precioUnitario)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.precioUnitario)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.fechaCaducidad)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.fechaCaducidad)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idPresentacion" />
                <input type="submit" value="Eliminar" class="btn btn-primary" />
            </form>
        </div>
    </div>
    <div>
        <a asp-action="VerInsumos">Regresar a la lista</a>
    </div>
</section>